<%= simple_form_for @eps, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= @eps[:name] %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                epses_path, :class => 'btn btn-default' %>
<% end %>
