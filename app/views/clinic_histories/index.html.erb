
<div>
   
    <div>
    <div class="col-md-12 column">
    <div class="page-header">
        <h1>Listado de Historas Clinicas<span class="pull-right label label-default"><%= @clinic_histories.count %></span></h1>
    </div>
      <table class="table table-bordered table-hover" id="tab_logic" style="    width:100%;">
        <thead>
          <tr >
            <th class="text-center">
              #
            </th>
            <th class="text-center">
              Ciudad
            </th>
            <th class="text-center">
              Analisis
            </th><th class="text-center">
              Medico de Turno
            </th><th class="text-center">
              Pasciente
            </th><th class="text-center">
              Destino
            </th>
            </th><th class="text-center">
              Opciones
            </th>
          </tr>
        </thead>
        <tbody>
        <% @clinic_histories.each do |clinic_history| %>
      <tr>
        <td><%= clinic_history.id %></td>
        <td><%= clinic_history.city %></td>
        <td><%= clinic_history.analysis %></td>
        <td><%= clinic_history.user_id %></td>
        <td><%= clinic_history.patient.first_name %></td>
        <td><%= simple_format clinic_history.mobiel_service %></td>
        <td><%= link_to 'Mostrar', patient_clinic_history_path(@patient,clinic_history) %>

<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      patient_clinic_history_path(@patient,clinic_history),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>

        </td>
      </tr>
    <% end %>
          
        </tbody>
        <%= link_to 'Nueva Historia Clinica', patient_clinic_histories_path(@patient), method: :create %>
        <%= link_to 'Regresar', patients_path  %>
      </table>
    </div>
  </div>
</div>




