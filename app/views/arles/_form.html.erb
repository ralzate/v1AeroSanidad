<%= simple_form_for @arl, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= (@arl[:name]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                arles_path, :class => 'btn btn-default' %>
<% end %>
